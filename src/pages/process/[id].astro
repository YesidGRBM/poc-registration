---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';

import MobilePage from '../../components/MobilePage.astro';
import DesktopPage from '../../components/DesktopPage.astro';

const userAgent = Astro.request.headers.get('user-agent') || "";

const isMobile = /Android|iPhone|iPad|iPod|Opera Mini|IEMobile|Mobile/i.test(userAgent);
---
<Layout>
	{isMobile ? <MobilePage id={Astro.params.id ?? ''} />: <DesktopPage id={Astro.params.id ?? ''} />}
</Layout>
